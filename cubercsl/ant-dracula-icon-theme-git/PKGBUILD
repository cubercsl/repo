# Maintainer: cubercsl <2014cais01 at gmail dot com>
pkgname=ant-dracula-icon-theme-git
_pkgname=dracula-icons
pkgver=r9.2d3c83ca
pkgrel=1
pkgdesc="Dracula theme icon"
provide=('ant-dracula-icon-theme')
conflicts=('ant-dracula-icon-theme')
arch=("any")
url="https://github.com/m4thewz/dracula-icons.git"
license=("GPL")
options=("!strip")
makedepends=("git")
source=("git+https://github.com/m4thewz/dracula-icons.git")
sha256sums=('SKIP')

pkgver() {
  cd "${srcdir}/${_pkgname}"
  echo "r$(git rev-list --count HEAD).$(git rev-parse --short HEAD)"
}
prepare() {
  cd "${srcdir}/${_pkgname}"
  rm **.md
}

package() {
    install -vdm755 "${pkgdir}/usr/share/icons/Dracula"
    cp -drf --no-preserve='ownership' "${srcdir}/${_pkgname}/"* "${pkgdir}/usr/share/icons/Dracula/"
}
